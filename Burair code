#include <stdio.h>
int main()
{
  int a=0;
  Int b=0;
  int c=0;
  int d=0;
 printf("Enter the number of rows\n");
  scanf("%d", &a);
for (d=1;d<=5;d++)
{
 
  for (c = 1; c <= a; c++)
  {
    for (b = 1; b <= a-c; b++)
      printf(" ");

    for (b = 1; b <= 2*c-1; b++)
      printf("*");

    printf("\n");
  }

  for (c = 1; c <= a - 1; c++)
  {
    for (b = 1; b <= c; b++)
      printf(" ");

    for (b = 1 ; b <= 2*(a-c)-1; b++)
      printf("*"); 

    printf("\n");
  }
}
  return 0;
}
